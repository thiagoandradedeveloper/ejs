<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Exemplo EJS</title>
        <link rel="stylesheet" href="style.css">
        <script src="script.js"></script>
    </head>
    <body>
        <%- include('cabecalho.ejs') %>
        <h1>Olá, <%= nome %></h1>
        <p>Seu e-mail é <%= email %></p>
        <% if(estado_civil){ %>
            <h1 style="color: red;">Casado</h1>
        <% } else { %>
            <h1 style="color: blue;">Solteiro</h1>
        <% } %>
        <h1><%- estado_civil ? name = 'Thiago' : name = 'Lucas' %></h1>
        <h2>Nome: <%= name %></h2>
        <% let people = ['geddy', 'neil', 'alex'] %>
        <%= people %><br>
        <img src="img/simpsons.png" width="350px"><br>
        <% for(i = 0; i < 10; i++){ %>
            Lucas Pereira<br>
        <% } %>
        <h1><%- estado_civil ? name = 'Thiago' : name = 'Lucas' %></h1>
    </body>
</html>